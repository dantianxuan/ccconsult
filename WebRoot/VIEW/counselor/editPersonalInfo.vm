#set($counselorVO=$session.getAttribute("SESSION_COUNSELOR_OBJECT"))
<div class="row">
	<div class="col-lg-12">
		<div class="alert alert-dismissable alert-info">
		   请编辑您的个人信息
		</div>
	</div>
<div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal" id="consultantForm" action="$link.contextPath/consultant/editPersonalInfo.htm?action=save" method="post" enctype="multipart/form-data">
                    #if($result && !$result.success)
                        <div class="alert alert-dismissable alert-danger">
                           $result.message
                        </div>
                    #end
                     <fieldset>
                	   <input type="hidden" name="id" value="$!counselorVo.counselor.id">
                       <div class="form-group">
                        <label  class="col-lg-2 control-label">注册账户</label>
                            <div class="col-lg-8" style="padding-top:8px;">
                            	<p class="text-danger">$!counselorVO.counselor.email</p>
                            </div>
                       	</div>
                       
                      	<div class="form-group">
                             <label  class="col-lg-2 control-label">联系方式</label>
                            <div class="col-lg-8">
                                <input type="text" name="mobile" class="form-control" placeholder="请输入您的手机号码" value="$!consultant.mobile"/>
                            </div>
                    	</div>

                        <div class="form-group">
                            <label  class="col-lg-2 control-label">有效的邮箱地址</label>
                            <div class="col-lg-8">
                               <input type="text" name="email" class="form-control" placeholder="请输入您的有效的邮箱地址" value="$!consultant.email"/>
                            </div>
                        </div>
                        
						<div class="col-lg-12">
								<br/>
						        <button type="button" style="float:right;" class="btn btn-danger col-lg-4" onclick="submitConsultant()">提交个人信息</button>
						</div>
						 </fieldset>
 					  </form>
				</div>
			</div>
		</div>
	</div>

