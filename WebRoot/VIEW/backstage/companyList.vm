<form id="queryArticlesForm" action="$link.contextPath/backstage/companyList.htm">

  
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
					<div class="form-group">
				      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
				      <div class="col-lg-10">
				        <input type="text" class="form-control" id="inputEmail" placeholder="Email">
				      </div>
				    </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>
                    	<th width="5%">ID</th>
                        <th width="55%">公司名称</th>
                        <th width="20%">创建时间</th>
                        <th width="10%">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    #foreach($company in $companys.getResult())
                    <tr>
                    	<td><a href="$link.contextPath/article.htm?articleId=$article.id">$company.id</td>
                        <td><a href="$link.contextPath/article.htm?articleId=$article.id">$company.name</td>
                        <td>$date.format("yyyy-MM-dd HH:mm:ss", $company.gmtCreate)</td>
                        <td>
                        	<a href="$link.contextPath/backstage/articleEdit.htm?articleId=$article.id" target="_blank">编辑</a>
                        	<a href="javascript:void(0)" onclick="deleteArticle($article.id)">删除</a>
                        </td>
                    </tr>
                    #end
                    </tbody>
                </table>               
            </div>
        </div>
    </div>
</div>
<input type="hidden" name="pageSize" value="$articles.getPageSize()"/>
<input type="hidden" name="pageNo" value="0" id="pageNo"/>
<div class="row">
    <div class="col-lg-12">
		<ul class="pagination" style="margin-top:-10px;float:right;">
			#foreach($index in [1..$articles.getTotalPageCount()])
				<li><a href="javascript:void(0)" onclick="submitForm($index)">$index</a></li>
			#end
		</ul>    
    </div>
</div>   
</form>
<script>
	function submitForm(pageNo){
		$('#pageNo').val(pageNo);
		$('#queryArticlesForm').submit()
	}
	
	function deleteArticle(articleId){
		if(confirm("你确认要删除该文章！！")){
			jQuery.ajax({
	             type: "POST",
	             url: "$link.contextPath/backstage/deleteArticle.json",
	             data: {'articleId':articleId},
	             dataType: "json",
	             success: function(data){
	             	if(data.result.success==true){
	             		window.open(window.location.href, "_blank");
	             	}else{
	             		alert("删除失败"+data.result.message);
	             	}
	              }
	         });
		}
     }
</script>
