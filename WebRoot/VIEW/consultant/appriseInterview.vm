#set($consultant=$session.getAttribute("SESSION_CONSULTANT_OBJECT"))
<link href="$link.contextPath/STATIC/plugin/umeditor/themes/default/css/umeditor.css" type="text/css" rel="stylesheet">
<script type="text/javascript" src="$link.contextPath/STATIC/plugin/umeditor/umeditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="$link.contextPath/STATIC/plugin/umeditor/umeditor.js"></script>
<!-- 语言包文件(建议手动加载语言包，避免在ie下，因为加载语言失败导致编辑器加载失败) -->
<script type="text/javascript" src="$link.contextPath/STATIC/plugin/umeditor/lang/zh-cn/zh-cn.js"></script>  

#if(!$result.success)
<div class="alert alert-dismissable alert-danger">
  <h2>请注意</h2>
  <p>$result.message</p>
</div>	
#else
<form  id="appriseInterviewForm">
<div class="row">
	<div class="col-lg-12">
	<div class="alert alert-dismissable alert-warning">
	   <strong>咨询师已完成预约</strong><br/>
	  请对咨询师的服务进行评价，完成评价后咨询师才能获得咨询费用，如果您对本次咨询有异议，可以发起<a href="" style="font-size:18px;"><span class="glyphicon glyphicon-exclamation-sign"></span>申述.</a>
	</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
		  <div class="panel-body">
                  	<div class="col-lg-2">
                        <img src="$link.contextPath/UPLOAD/$!counselorVO.counselor.photo" class="img-rounded" style="width: 82px;height: 82px;">
                    </div>
                    <div class="col-lg-5">
	                    <p class="col-lg-12"><strong class=" text-right col-lg-4">名称:</strong>$!counselorVO.counselor.name</p>
	                    <p class="col-lg-12"><strong class=" text-right col-lg-4">注册邮箱:</strong>$!counselorVO.counselor.email</p>
	                    <p class="col-lg-12"><strong class=" text-right col-lg-4">公司信息:</strong>$!counselorVO.company.name</p>
                    </div>
                    <div class="col-lg-5">
	                    <p class="col-lg-12"><strong class=" text-right col-lg-4">手机号码</strong>$!counselorVO.counselor.mobile</p>
	                    <p class="col-lg-12"><strong class=" text-right col-lg-4">部门信息</strong>$!counselorVO.counselor.department</p>
                    </div>
			</div>  	                
  		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
		  <div class="panel-body">
		  	<input type="radio" name="apprise"  value="1" checked>
            非常好
            <input type="radio" name="apprise"  value="2">
            还不错
            <input type="radio" name="apprise"  value="3">
            一般般
            <input type="radio" name="apprise"  value="4">
            简直不敢恭维
		  </div>
		 </div>
	</div>
</div>		  
<div class="row">
	<div class="col-lg-12">
        <script type="text/plain" id="myEditor" name="message" style="width:100%;height:200px;">$!article.content</script>
        <script type="text/javascript">
		    $(function(){
		        window.um = UM.getEditor('myEditor', {
		            /* 传入配置参数,可配参数列表看umeditor.config.js */
		            toolbar: ['undo redo | bold italic underline']
		        });
		    });
        </script>   
        <br/>
        <input type="hidden" name="relId" value="$interview.id"/>
        <button type="button" class="btn btn-danger col-lg-2" style="float:right;" onclick="appriseInterview()">完成评价</button>
        <a href="$link.contextPath/consultant/interview.htm?interviewId=$interview.id" class="btn btn-link" style="float:right;">返回记录</a>
	   
	</div> 	  	
</div>
</form>
<script>
	function appriseInterview(){
		jQuery.ajax({
             type: "POST",
             url: "$link.contextPath/consultant/appriseInterview.json",
             data: $('#appriseInterviewForm').serialize(),
             dataType: "json",
             success: function(data){
             	if(data.result.success==true){
             		window.location.href="$link.contextPath/consultant/interview.htm?interviewId="+data.result.object.id
             	}else{
             		alert("评价失败"+data.result.message);
             	}
              }
         });
	}
</script>
#end
