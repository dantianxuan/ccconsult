#if(!$result.success)
<div class="alert alert-dismissable alert-danger">
  <h2>请注意</h2>
  <p>$result.message</p>
</div>	
#else
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
		  <div class="panel-body">
		  		<div class="col-lg-12">
                  	<div class="col-lg-2">
                        <img src="$link.contextPath/STATIC/image/alipay.jpg" class="img-rounded" style="width: 82px;height: 82px;">
                    </div>
                    <div class="col-lg-5">
	                    <p class="col-lg-12"><strong class=" text-right col-lg-5">注册邮箱:</strong>$!counselorVO.counselor.name</p>
	                    <p class="col-lg-12"><strong class=" text-right col-lg-5">真实姓名:</strong>$!counselorVO.company.name</p>
	                    <p class="col-lg-12"><strong class=" text-right col-lg-5">公司信息:</strong>$!counselorVO.counselor.name</p>
                    </div>
                    <div class="col-lg-5">
	                    <p class="col-lg-12"><strong class=" text-right col-lg-5">认证状态</strong>$!counselorVO.counselor.name</p>
	                    <p class="col-lg-12"><strong class=" text-right col-lg-5">手机信息</strong>$!counselorVO.company.name</p>
	                    <p class="col-lg-12"><strong class=" text-right col-lg-5">评价</strong>$!counselorVO.counselor.name</p>	                    
                    </div>
                </div>	
				<div class="col-lg-12" style="border-top:solid 1px #ddd">
					<p class="text-primary">
						  <strong>咨询师已完成预约</strong> 请保持您的手机畅通或在预约时间联系咨询师以接受咨询.<br/>
						  <span class="glyphicon glyphicon-dashboard"></span>$date.format("yyyy-MM-dd HH:mm:ss",$interview.gmtShceduleBegin)  $date.format("yyyy-MM-dd HH:mm:ss", $interview.gmtScheduleEnd)
					</p>
				</div>
			</div>  	                
  		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
		  <div class="panel-body">
		  <input type="checkbox">我确认完成咨询
		  
		  </div>
		 </div>
	</div>
</div>		  
<div class="row">
	<div class="col-lg-12">
        <script type="text/plain" id="myEditor" name="message" style="width:100%;height:200px;">$!article.content</script>
        <script type="text/javascript">
		    $(function(){
		        window.um = UM.getEditor('myEditor', {
		            /* 传入配置参数,可配参数列表看umeditor.config.js */
		            toolbar: ['undo redo | bold italic underline']
		        });
		    });
        </script>   
        <br/>
        <input type="hidden" name="creatorRole" value="1"/>
        <input type="hidden" name="creator"  value="$counselorVO.counselor.id"/>
        <input type="hidden" name="relId" value="$interview.id"/>
	   <button type="button" class="btn btn-danger col-lg-2" style="float:right;" onclick="sendMessage()">留言</button>
	</div> 	  	
</div>
<script>
	function sendMessage(){
		console.log($('#sendMessageForm').serialize());
		jQuery.ajax({
             type: "POST",
             url: "$link.contextPath/sendInterviewShotMessage.json",
             data: $('#sendMessageForm').serialize(),
             dataType: "json",
             success: function(data){
             	console.log(data);
             	if(data.result.success==true){
             		window.location.href=window.location.href;
             	}else{
             		alert("发送失败"+data.result.message);
             	}
              }
         });
	}
</script>
#end
