#set($consultant=$session.getAttribute("SESSION_CONSULTANT_OBJECT"))
<script language="javascript">
	function submitConsultant(){
		var name=$('input[name=name]').val();
    	var mobile=$('input[name=mobile]').val();
    	var email=$('input[name=email]').val();
    	if(name=='' || name==undefined){
    		alert('姓名不能为空');
    		return ;
    	}
		if(mobile=='' || mobile==undefined){
    		alert('联系方式不能为空');
    		return ;
    	}
    	
		if(email=='' || email==undefined){
    		alert('邮箱地址不能为空');
    		return ;
    	}
      $('#consultantForm').submit();
    }
</script>
<div class="row">
	<div class="col-lg-12">
		<div class="alert alert-dismissable alert-info">
		   请编辑您的个人信息
		</div>
	</div>
<div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal" id="consultantForm" action="$link.contextPath/consultant/editInformation.htm?action=save" method="post" enctype="multipart/form-data">
                    #if($result && !$result.success)
                        <div class="alert alert-dismissable alert-danger">
                           $result.message
                        </div>
                    #end
                    <input type="hidden" name="id" value="$!consultant.id">
                           <div class="form-group">
                            <label  class="col-lg-2 control-label">姓名</label>
	                            <div class="col-lg-8">
	                                <input type="text" name="name" class="form-control" placeholder="请输入姓名" value="$!consultant.name"/>
	                            </div>
                           </div>
                           
                          <div class="form-group">
                                 <label  class="col-lg-2 control-label">联系方式</label>
	                            <div class="col-lg-8">
	                                <input type="text" name="mobile" class="form-control" placeholder="请输入您的手机号码" value="$!consultant.mobile"/>
	                            </div>
                        </div>

                            <div class="form-group">
                                <label  class="col-lg-2 control-label">有效的邮箱地址</label>
                                <div class="col-lg-8">
                                   <input type="text" name="email" class="form-control" placeholder="请输入您的有效的邮箱地址" value="$!consultant.email"/>
                                </div>
                            </div>
                            
						<div class="col-lg-12">
								<br/>
						        <button type="button" style="float:right;" class="btn btn-danger col-lg-4" onclick="submitConsultant()">提交个人信息</button>
						</div>
 					  </form>
				</div>
			</div>
		</div>
	</div>

