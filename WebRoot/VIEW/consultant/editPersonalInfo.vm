#set($consultant=$session.getAttribute("SESSION_CONSULTANT_OBJECT"))
<link href="$link.contextPath/STATIC/plugin/umeditor/themes/default/css/umeditor.css" type="text/css" rel="stylesheet">
<script type="text/javascript" src="$link.contextPath/STATIC/plugin/umeditor/umeditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="$link.contextPath/STATIC/plugin/umeditor/umeditor.js"></script>
<!-- 语言包文件(建议手动加载语言包，避免在ie下，因为加载语言失败导致编辑器加载失败) -->
<script type="text/javascript" src="$link.contextPath/STATIC/plugin/umeditor/lang/zh-cn/zh-cn.js"></script>  
<script src="$link.contextPath/STATIC/js/fileinput.js"></script>
<link rel="stylesheet" href="$link.contextPath/STATIC/css/fileinput.css"/>
<script language="javascript">
	function submitConsultant(){
		var name=$('input[name=name]').val();
    	var mobile=$('input[name=mobile]').val();
    	var email=$('input[name=email]').val();
    	if(name=='' || name==undefined){
    		alert('姓名不能为空');
    		return ;
    	}
		if(mobile=='' || mobile==undefined){
    		alert('联系方式不能为空');
    		return ;
    	}
    	
		if(email=='' || email==undefined){
    		alert('邮箱地址不能为空');
    		return ;
    	}
      $('#consultantForm').submit();
    }
</script>
#parse("consultant/consultantGuide.vm")
<div class="row">
	<div class="col-sm-12">
		<div class="alert alert-dismissable alert-warning">
		   请编辑您的个人信息
		</div>
	</div>
<div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal" id="consultantForm" action="$link.contextPath/consultant/editPersonalInfo.htm?action=save" method="post" enctype="multipart/form-data">
                    #if($result && !$result.success)
                        <div class="alert alert-dismissable alert-danger">
                           $result.message
                        </div>
                    #end
                    <input type="hidden" name="id" value="$!consultant.id">
                     	<div class="form-group">
                            <label  class="col-sm-2 control-label">有效的邮箱地址</label>
                            <div class="col-sm-8" style="padding-top:8px;">
                            	<p class="text-danger">$!consultant.email</p>
                            </div>                            
                        </div>    
						<div class="form-group">
                             <label  class="col-sm-2 control-label">个人头像</label>
                            <div class="col-sm-8">
                                 <img  src="$link.contextPath/UPLOAD/$!consultant.photo" class="img-rounded photoTitle" style="width: 120px;"/><br/>
                                 <a class="photoTitle" href="javascript:void(0)" onclick="$('#fileUploadInput').show();">单击修改您的头像</a><br/>
                            </div>                            
                    	</div>  	
                      	<div class="form-group" id="fileUploadInput" style="display:none;">
                             <label  class="col-sm-2 control-label">上传头像</label>
                            <div class="col-sm-8">
                                 <input  type="file" name="localPhoto"  class="file" multiple="false" data-show-upload="false" data-show-caption="true" />
                            </div>	                            
                    	</div> 	                                          
                       <div class="form-group">
                        <label  class="col-sm-2 control-label">姓名</label>
                            <div class="col-sm-8">
                                <input type="text" name="name" class="form-control" placeholder="请输入姓名" value="$!consultant.name"/>
                            </div>
                       </div>
                       <div class="form-group">
                                 <label  class="col-sm-2 control-label">手机号码</label>
	                            <div class="col-sm-8">
	                                <input type="text" name="mobile" class="form-control" placeholder="请输入您的手机号码" value="$!consultant.mobile"/>
	                            </div>
                        </div>

						<div class="form-group">
	                             <label  class="col-sm-2 control-label">个人简介</label>
	                            <div class="col-sm-10">
							  		<script type="text/plain" id="myEditor" name="description" style="width:100%;height:260px;">$!consultant.description</script>
							        <script type="text/javascript">
								        $(function(){
								            window.um = UM.getEditor('myEditor', {
								                /* 传入配置参数,可配参数列表看umeditor.config.js */
								                toolbar: [
													'source | undo redo | bold italic underline strikethrough | superscript subscript | forecolor backcolor | removeformat |',
													            'insertorderedlist insertunorderedlist | selectall cleardoc paragraph | fontfamily fontsize' ,
													            '| justifyleft justifycenter justifyright justifyjustify |',
													            'link unlink | emotion image video  | map',
													             'formula'
					]
								            });
								        });
							        </script> 
	                            </div>
	                    	</div>                    	  
                        <hr/>              	                             
						<div class="col-sm-12">
								<label  class="col-sm-2 control-label"></label>
								<a  href="$link.contextPath/consultant/personalInfo.htm" class="btn btn-link col-sm-2" >  返回个人信息</a>
								<button type="submit"  class="btn btn-danger ">提交个人信息</button>
						</div>	                            
 					  </form>
				</div>
			</div>
		</div>
	</div>

